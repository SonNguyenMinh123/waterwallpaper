<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/titlename"
    tools:context=".widgets.SettingActivity">

    <RelativeLayout
        android:id="@+id/rll_activity_enable_notify__header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.notification.inotythemehhhhh.customviews.widgets.TextViewOSBold
            android:id="@+id/txv_activity_setting_settings"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/background_light"
            android:gravity="center"
            android:text="Clock Format"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imv_activity_clock_format__back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/bg_pressed_back_navigation"
            android:text="Back"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rll_activity_enable_notify__header">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                >
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

            <com.notification.inotythemehhhhh.customviews.widgets.MyCheckBoxView
                android:id="@+id/ckb_activity_lock_format__24h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textFormat="@string/format_24h"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="10dp"
                android:background="@color/line"/>

            <com.notification.inotythemehhhhh.customviews.widgets.MyCheckBoxView
                android:id="@+id/ckb_activity_lock_format__12h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textFormat="@string/format_12h"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
