<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E0F2F1"
    tools:context=".widgets.SettingActivity">

    <TextView
        android:id="@+id/txv_activity_setting__settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:text="Notify Setting"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/_19sdp"
        android:textStyle="bold"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_activity_setting__settings">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/line"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_30sdp"
                >

            </TextView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

            <RelativeLayout
                android:id="@+id/rll_activity_setting__enable_notify"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pressed_color_item_main">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Turn On/Off Notify"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chevron_right"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_30sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="Personalization"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12sdp"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/black50"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="5.0dip">


                <com.sevenheaven.iosswitch.ShSwitchView
                    xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/swv_activity_setting__statusbar"
                    android:layout_width="62dip"
                    android:layout_height="41dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    shSwitch:shadowSpace="7dip"
                    shSwitch:tintColor="#1E88E5"
                    />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_alignLeft="@+id/txv_activity_setting__statusbar"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black20"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txv_activity_setting__statusbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Show Statusbar"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_activity_setting__color_statusbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5.0dip"
                android:background="@drawable/bg_pressed_color_item_main">

                <ImageView

                    android:id="@+id/show_activity_setting__color_statusbar"
                    android:layout_width="@dimen/_53sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:text="Color"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:src="@drawable/img_check_color"
                    android:background="@drawable/bgr_blue"
                   />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_alignLeft="@+id/txv_activity_setting__color_statusbar"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black20"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txv_activity_setting__color_statusbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Color Statusbar"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="5.0dip">


                <com.sevenheaven.iosswitch.ShSwitchView
                    xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/swv_activity_setting__menu_setting"
                    android:layout_width="62dip"
                    android:layout_height="41dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="@dimen/_5sdp"
                    shSwitch:shadowSpace="7dip"
                    shSwitch:tintColor="#1E88E5"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_alignLeft="@+id/txv_activity_setting__menu_setting"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black20"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txv_activity_setting__menu_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Show menu settings"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="5.0dip">


                <com.sevenheaven.iosswitch.ShSwitchView
                    xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/swv_activity_setting__signal_strength"
                    android:layout_width="62dip"
                    android:layout_height="41dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="@dimen/_5sdp"
                    shSwitch:shadowSpace="7dip"
                    shSwitch:tintColor="#1E88E5"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_alignLeft="@+id/txv_activity_setting__signal_strength"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black20"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txv_activity_setting__signal_strength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Show signal strength"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rll_activity_setting_battery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="5.0dip">

                <TextView
                    android:id="@+id/txv_activity_setting__battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Show battery percentage"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>


                <com.sevenheaven.iosswitch.ShSwitchView
                    xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                    android:layout_width="62dip"
                    android:layout_height="41dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/swv_activity_setting__battery"
                    shSwitch:shadowSpace="7dip"
                    shSwitch:tintColor="#1E88E5"
                    android:layout_marginRight="@dimen/_5sdp"
                    />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_alignLeft="@+id/txv_activity_setting__battery"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black20"
                    android:layout_marginRight="@dimen/_10sdp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rll_activity_setting__clock_format"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pressed_color_item_main">


                <TextView
                    android:id="@+id/txv_activity_setting__clock_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Clock Format"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/txv_activity_setting__clock_format_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imv_activity_setting__clock_format"
                    android:text="12:08 PM"
                    android:textColor="#a7a7a7"
                    android:textSize="@dimen/_13sdp"/>

                <ImageView
                    android:id="@+id/imv_activity_setting__clock_format"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chevron_right"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_30sdp"
                >

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

            <RelativeLayout
                android:id="@+id/rll_activity_setting__carier_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="5.0dip">

                <TextView
                    android:id="@+id/txv_activity_setting__carrier_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Show carrier's name"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>


                <com.sevenheaven.iosswitch.ShSwitchView
                    xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/swv_activity_setting__carier_name"
                    android:layout_width="62dip"
                    android:layout_height="41dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    shSwitch:shadowSpace="7dip"
                    shSwitch:tintColor="#1E88E5"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_alignLeft="@+id/txv_activity_setting__carrier_name"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black20"
                    android:layout_marginRight="@dimen/_10sdp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/view_activity_setting__background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5.0dip"
                android:background="@drawable/bg_pressed_color_item_main">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chevron_right"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_alignLeft="@+id/txv_activity_setting__background"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/black20"/>

                <TextView
                    android:id="@+id/txv_activity_setting__background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Change Background Notify"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rll_activity_setting__custom_carier_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pressed_color_item_main">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Customize carrier's name"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chevron_right"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_30sdp"
                >

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

            <RelativeLayout
                android:id="@+id/rll_activity_setting__rate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pressed_color_item_main">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Rate app"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_rateus"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
