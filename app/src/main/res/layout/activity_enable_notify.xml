<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlename"
    tools:context=".widgets.SettingActivity">

    <RelativeLayout
        android:id="@+id/rll_activity_enable_notify__header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.notification.inotythemehhhhh.customviews.widgets.TextViewOSBold
            android:id="@+id/txv_activity_setting_settings"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/background_light"
            android:gravity="center"
            android:text="Enable Notify Ios"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/bg_pressed_back_navigation"
            android:text="Back"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rll_activity_enable_notify__header">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                >

                <com.notification.inotythemehhhhh.customviews.widgets.TextViewOSNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="Turn on following services:"
                    android:textColor="#000000"
                    android:textSize="13sp"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

            <RelativeLayout
                android:id="@+id/rll_activity_enable_notify__accessbility"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pressed_color_item_main"
                android:paddingTop="5.0dip">

                <com.notification.inotythemehhhhh.customviews.widgets.TextViewOSNormal
                    android:id="@+id/txv_activity_main__signal_strength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Accessibility"
                    android:textColor="#000000"
                    android:textSize="17sp"/>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_alignLeft="@+id/txv_activity_main__signal_strength"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rll_activity_setting_battery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="5.0dip">

                <com.notification.inotythemehhhhh.customviews.widgets.TextViewOSNormal
                    android:id="@+id/txv_activity_setting_screenlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:text="Notification"
                    android:textColor="#000000"
                    android:textSize="17sp"/>


            </RelativeLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/line"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
